{
     "variables": {
      "aws_access_key": "",
      "aws_secret_key": "",
      "region": "",
      "source_ami":"",
      "instance_type":"",
      "vpc_id": "",
      "subnet_id": ""
    },
    "builders": [{
      "access_key": "{{user `aws_access_key`}}",
      "secret_key": "{{user `aws_secret_key`}}",
      "type": "amazon-ebs",
      "region": "{{user `region`}}",
      "source_ami": "{{user `source_ami`}}",
      "instance_type": "{{user `instance_type`}}",
      "ssh_username": "ec2-user",
      "ami_name": "ForAutoscaling",
      "vpc_id": "{{user `vpc_id`}}",
      "subnet_id": "{{user `subnet_id`}}",
      "tags": {
        "Name": "ForAutoscaling"
      }
    }],
    "provisioners": [{
      "type": "shell",
      "inline": [
        "sleep 30",
        "sudo yum update -y",
        "sudo yum install nginx -y",
        "sudo yum install git -y",
        "sudo git clone https://github.com/arundevlops/website1.git",
        "sudo rm -rf /usr/share/nginx/html/index.html",
        "sudo cp web page/index.html /usr/share/nginx/html/index.html",
        "sudo cp web page/style.css /usr/share/nginx/html/style.css",
        "sudo cp web page/scorekeeper.js /usr/share/nginx/html/scorekeeper.js",
        "sudo service nginx start",
        "sudo chkconfig nginx on"
        ]
    }]
  }
